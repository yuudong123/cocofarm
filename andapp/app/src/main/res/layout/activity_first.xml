<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="60dp"
    android:paddingHorizontal="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/coco_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--<ImageView-->
<!--    android:id="@+id/iv_check"-->
<!--    android:src="@drawable/icon_loginpage"-->
<!--    android:layout_width="60dp"-->
<!--    android:layout_height="60dp"/>-->
<LinearLayout
    android:id="@+id/layout_first"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="left|bottom"
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코코팜을\n시작합니다"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="right"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="fields-growth.json"
            app:lottie_loop="true" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:textStyle="bold"
        android:backgroundTint="#ffffff"
        android:textColor="@color/primary"
        android:text="시작하기"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <Button
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="SNS 간편 로그인"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <TextView
        android:clickable="true"
        android:id="@id/tv_join"
        android:textSize="15dp"
        android:layout_marginVertical="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="이메일로 회원가입"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_joinInfo"
        android:textSize="12dp"
        android:text="'이메일로 회원가입', 'SNS 간편 로그인'을 누름으로써 코코팜의 서비스 이용약관, 개인정보 이용약관,
위치정보 이용약관 정책에 모두 동의합니다."
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/page_logo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
</LinearLayout>