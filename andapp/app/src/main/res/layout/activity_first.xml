<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coco_background"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="60dp">

    <LinearLayout
        android:id="@+id/layout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="Nature\nBrand\nCOCOFARM"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="right"
                app:lottie_autoPlay="true"
                app:lottie_fileName="fields-growth.json"
                app:lottie_loop="true"
                app:lottie_speed="3" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#ffffff"
            android:text="일반 로그인"
            android:textColor="@color/primary"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_sns"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="SNS 간편 로그인"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:clickable="true"
            android:text="이메일로 회원가입"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_joinInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'이메일로 회원가입', 'SNS 간편 로그인'을 누름으로써 코코팜의 서비스 이용약관, 개인정보 이용약관, 위치정보 이용약관 정책에 모두 동의합니다."
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/page_logo" />

    </LinearLayout>

</LinearLayout>