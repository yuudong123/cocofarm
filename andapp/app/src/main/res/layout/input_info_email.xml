<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingBottom="30dp"
    android:paddingTop="60dp"
    android:paddingHorizontal="45dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 기기등록, 회원가입 등 정보 입력 시 사용 -->

    <TextView
        android:id="@+id/tv_infoTitle"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:text="TV_INFO TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Text에 \n 사용시 줄 바꿈 가능합니다 -->
    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_infoAssist"
            android:textSize="15dp"
            android:text="TV INFO ASSIST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="#123456"
        app:hintTextColor="#123456">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_info"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_send"
        android:backgroundTint="@color/primary"
        android:text="인증번호 전송"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_email"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="#123456"
        app:hintTextColor="#123456">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_confirm"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_email"
            android:backgroundTint="@color/primary"
            android:text="확인"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_infoBtm"
            android:layout_marginRight="10dp"
            android:text="회원가입을 중단하고싶으신가요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_infoBtmClick"
            android:textStyle="italic"
            android:clickable="true"
            android:textColor="#348CDA"
            android:text="홈으로"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>