<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/coco_background"
    android:id="@+id/layout"
    android:paddingBottom="30dp"
    android:paddingTop="60dp"
    android:paddingHorizontal="45dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 기기등록, 회원가입 등 정보 입력 시 사용 -->

    <TextView
        android:id="@+id/tv_title"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:text="이메일 인증하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:text="코코팜에서 사용하실 이메일을 입력해주세요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="60dp"
        android:id="@+id/edt_info"
        android:background="@drawable/round_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <TextView
        android:visibility="visible"
        android:clickable="true"
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_marginVertical="8dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:id="@+id/tv_send"
        android:textSize="15dp"
        android:text="인증번호 전송"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_complete"
        android:visibility="gone"
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_marginVertical="8dp"
        android:textColor="#CC14268C"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="전송완료"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/layout_confirm"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:paddingLeft="20dp"
        android:id="@+id/edt_confirm"
        android:hint="인증번호 7자리를 입력해주세요"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/round_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_marginVertical="8dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:id="@+id/tv_ok"
        android:textSize="15dp"
        android:text="확인 >"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/page_logo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"/>


</LinearLayout>