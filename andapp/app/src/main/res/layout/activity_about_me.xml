<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:paddingHorizontal="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:textStyle="bold"
        android:layout_marginVertical="15dp"
        android:textSize="16dp"
        android:textColor="#666666"
        android:text="내 정보"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_modify"
            android:clickable="true"
            android:gravity="bottom"
            android:layout_marginVertical="15dp"
            android:textSize="12dp"
            android:textColor="#007DEA"
            android:text="정보 수정하기"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>

    <View
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#121212"
            android:text="이메일"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_email"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:text="unknown@email.com"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <View
        android:layout_marginLeft="60dp"
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#121212"
            android:text="비밀번호"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_pw"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:text="password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <View
        android:layout_marginLeft="60dp"
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#121212"
            android:text="닉네임"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <View
        android:layout_marginLeft="60dp"
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#121212"
            android:text="연락처"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_phone"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
    <View
        android:layout_marginLeft="60dp"
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#121212"
            android:text="주소"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_address"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <View
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:background="#121212"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="#121212"
        android:layout_marginVertical="10dp"
        android:text="코코팜 개인구매회원 정보 이용동의"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_gravity="center"
        android:background="#121212"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="쇼핑이벤트/혜택관련 정보 이메일 받기"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="쇼핑이벤트/혜택관련 정보 SMS 받기"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginVertical="10dp"
        android:paddingVertical="16dp"
        android:background="#C6DDCD"
        android:textSize="12dp"
        android:text="  ※ 회원정보 찾기 관련 이메일은 수신 동의 여부와 관계없이 발송됩니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_gravity="center"
        android:background="#121212"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>