<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/coco_background"
    android:id="@+id/layout"
    android:paddingBottom="30dp"
    android:paddingTop="60dp"
    android:paddingHorizontal="45dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 기기등록, 회원가입 등 정보 입력 시 사용 -->

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_infoTitle"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="TV_INFO TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Text에 \n 사용시 줄 바꿈 가능합니다 -->
        <TextView
            android:layout_marginVertical="8dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/tv_infoAssist"
            android:textSize="15dp"
            android:text="TV INFO ASSIST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <EditText
        android:inputType="textPassword"
        android:drawableLeft="@drawable/customise_left_image_person"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:hint="비밀번호"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_info"
        android:background="@drawable/round_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:inputType="textPassword"
        android:drawableLeft="@drawable/customise_left_image_person"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:hint="비밀번호 확인"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_info2"
        android:background="@drawable/round_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:clickable="true"
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_marginVertical="8dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:id="@+id/tv_ok"
        android:textSize="15dp"
        android:text="완료 >"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>