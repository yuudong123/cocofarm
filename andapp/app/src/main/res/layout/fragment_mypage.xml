<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@drawable/coco_background"
        android:paddingHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="67dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_kakao"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/customize_kakao_logo" />
            <ImageView
                android:id="@+id/iv_naver"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/customize_naver_logo" />
            <ImageView
                android:id="@+id/iv_google"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/customize_google_logo" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="name"
                android:textColor="#ffffff"
                android:textSize="30dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="43dp"
            android:text="unKnown@email.com" />

        <TextView
            android:visibility="visible"
            android:textStyle="bold"
            android:textColor="#F8E64C"
            android:textSize="10dp"
            android:id="@+id/tv_snsOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="19dp"
            android:text="SNS 연동 해제" />

        <Button
            android:visibility="visible"
            android:textStyle="bold"
            android:id="@+id/btn_logout"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:backgroundTint="@color/white"
            android:text="로그아웃"
            android:textColor="@color/primary" />

    </RelativeLayout>

    <View
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    <TextView
        android:layout_marginVertical="15dp"
        android:text="개인정보"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/icon_mp_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_aboutme"
            android:clickable="true"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#121212"
            android:text="내 정보"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>

    </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginVertical="15dp"
            android:text="관리"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_mp_alert"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_myalert"
                android:clickable="true"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="알림 내역"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_mp_order"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_myorder"
                android:clickable="true"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="구매 내역"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <!-- 구매 내역은 코코몰-주문내역 세진씨가 만든 페이지로 이동 -->

        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_mp_list"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_myboard"
                android:clickable="true"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="내가 쓴 글"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginVertical="15dp"
            android:text="고객센터"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_mp_cs"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_cscenter"
                android:clickable="true"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="고객 서비스"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_mp_away"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/tv_away"
                android:clickable="true"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="#121212"
                android:text="회원탈퇴"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
            <!-- 회원탈퇴는 am_confirm -> result_remove -> result_complete -> activity_login 이용 -->

        </LinearLayout>


    </LinearLayout>
</LinearLayout>